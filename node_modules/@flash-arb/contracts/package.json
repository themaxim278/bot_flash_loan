{
  "name": "@flash-arb/contracts",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "build": "hardhat compile",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "hardhat test",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "fork:sim": "hardhat run scripts/fork-sim.ts",
    "slither": "slither ./contracts/contracts/FlashArbExecutor.sol --json slither-report/report.json || true",
    "mythril": "myth analyze contracts/contracts/FlashArbExecutor.sol -o json > mythril-report/report.json || true"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.22.14",
    "hardhat-gas-reporter": "^1.0.10",
    "solhint": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2"
  }
}